<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Massttr" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">

        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowBackground">@color/colorWhite</item>



        <!--        <item name="colorControlNormal">@color/colorWhiteOp60</item>-->
<!--        <item name="colorControlActivated">@color/colorWhiteOp60</item>-->
<!--        <item name="colorControlHighlight">@color/colorWhiteOp60</item>-->
<!--        <item name="android:textAlignment">gravity</item>-->
<!--        <item name="android:textDirection">locale</item>-->
        <item name="android:fontFamily">@font/pangram_regular</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="styleTextRegular">
        <item name="android:fontFamily">@font/pangram_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="styleTextSemiMedium">
        <item name="android:fontFamily">@font/pangram_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="styleTextBold">
        <item name="android:fontFamily">@font/pangram_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="styleTextPangram">
        <item name="android:fontFamily">@font/pangram_extrabold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="custom_tab_pink" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_color_selector</item>
        <item name="android:fontFamily">@font/pangram_regular</item>
        <item name="android:includeFontPadding">false</item>
       <!-- <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>-->
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="styleButton">
        <item name="android:background">@drawable/bg_gradient_button</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlackHelp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/pangram_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="styleEdit" parent="Theme.Massttr">
        <item name="android:background">@drawable/edit_box_bg</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColorHint">@color/tex_grayTwo</item>
        <item name="android:textColor">@color/colorBlackHelp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/pangram_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="spinnerBlack" parent="Theme.Massttr">
        <item name="android:fontFamily">@font/pangram_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/colorBlackHelp</item>
    </style>

    <style name="spinnerGray" parent="Theme.Massttr">
        <item name="android:fontFamily">@font/pangram_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/tex_grayTwo</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

