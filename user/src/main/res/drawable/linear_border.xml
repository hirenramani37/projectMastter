<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false"
        android:drawable="@drawable/bg_edittext">
        <shape>
            <corners android:radius="1px" />
            <stroke android:width="1.5dp" android:color="@color/box_gray" /> <!--outline stroke -->

        </shape>
    </item>
    <item android:state_focused="true"
        android:drawable="@drawable/edit_border_bg">
        <shape>
            <corners android:radius="10px" />
            <stroke android:width="1dp" android:color="@color/yellow" /> <!--outline stroke -->
        </shape>
    </item>
</selector>